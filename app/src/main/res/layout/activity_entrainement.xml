<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.kronologia.spsport.EntrainementActivity">

        <TextView
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:textSize="100sp"
            android:text="00:00"
            android:id="@+id/chronometre"
            />
        <TextView
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:text="nomExo"
            android:layout_weight="0.1"
            android:textSize="40sp"
            android:id="@+id/nomExercice"
            />

    <ImageView
        android:id="@+id/imageExo"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:src="@drawable/repos"/>

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:text="nomExoSuivant"
        android:layout_weight="0.1"
        android:id="@+id/nomExerciceSuivant"
        />

    <ProgressBar
        android:id="@+id/progressWOBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        />
</LinearLayout>
